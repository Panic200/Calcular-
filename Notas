nota1 = int(input ('coloque a nota: ' ))
nota2 = int (input('coloque a nota: ' ))
nota3 = int(input ('coloque a nota: ' ))
nota4 = int (input('coloque a nota: ' ))
valor = int (nota1 + nota2 + nota3+ nota4) /4
if int (valor <= 5.9 ):
  print('infelizmente voce reprovou')
else: print(f'voce foi aprovado com a nota {valor}')
